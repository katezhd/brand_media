                        <h1 id="editorTitle" class="article__title editable" data-disable-toolbar="true" data-placeholder="Введите название шаблона">{{name}}</h1>
                      </div>
                    </div>
                    {{{text}}}
                  </div>
                {{/st.id}}
                {{^st.id}}
                  <div id="editor" data-type="template" class="article">
                    <div class="editor__item">
