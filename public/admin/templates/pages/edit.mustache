<form class="edit-form admin" enctype="multipart/form-data" novalidate>
  <div class="row service-panel-close">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="row mb-3">
            <div class="col-md-6">
              <h4 class="card-title">
                <i class="{{st.icon}}"></i> {{st.caption}}. 
                {{#st.id}} 
                  {{#preview}}Просмотр записи #{{st.id}}{{/preview}} 
                  {{^preview}}Редактирование записи #{{st.id}}{{/preview}} 
                {{/st.id}} 
                {{^st.id}}Создание записи{{/st.id}}
              </h4>
              {{#published_at}}
                <h5 class="card-subtitle">Опубликовано <span data-date="{{published_at}}">{{published_at}}</span></h5>
              {{/published_at}}
            </div>
            <div class="col-md-6 text-right">
              <button type="button" class="btn waves-effect waves-light btn-outline-secondary list-btn" data-route="{{st.cntrl}}-list-{{st.page}}"><i class="fas fa-list"></i> Все {{st.caption}}</button> 
              {{#uScopes.update}} 
                {{#preview}} 
                  <button type="button" class="btn waves-effect waves-light btn-outline-primary edit-btn" data-id="{{st.id}}"><i class="fas fa-pencil-alt"></i> Редактировать</button> 
                {{/preview}} 
                {{^preview}} 
                  {{#st.id}} <button type="button" class="btn waves-effect waves-light btn-outline-success save-btn" data-id="{{st.id}}"><i class="fas fa-check"></i> Сохранить</button> {{/st.id}} 
                {{/preview}} 
              {{/uScopes.update}} 
              {{#uScopes.create}} 
                {{^preview}} 
                  {{^st.id}} <button type="button" class="btn waves-effect waves-light btn-outline-success save-btn" data-id><i class="fas fa-check"></i> Создать</button> {{/st.id}} 
                {{/preview}} 
              {{/uScopes.create}}
            </div>
          </div>    
          <div class="row">
            <div class="col-md-12">
              {{#preview}} 
                <div class="article">
                  <div>
                    {{#image}}
                      <header id="editorCover" class="longread-header main-img__wrap" style="background-image: url(\'/storage/pages/{{image}}\')"></header>
                    {{/image}}
                    <div class="article__container">
                      <h1 class="article__title">{{name}}</h1>
                    </div>
                  </div>
                  {{{text}}}
                </div>
              {{/preview}} 
              <input type="hidden" class="form-control" name="id" value="{{id}}">
              <input type="hidden" class="form-control" name="name" value="{{#name}}{{name}}{{/name}}" required>
              {{^preview}} 
                <input type="hidden" class="form-control" name="image">
                <input type="hidden" class="form-control" name="image_delete">
                <input type="hidden" class="form-control" name="text" value="{{text}}">
                {{#st.id}}
