    <a href="#" class="service-panel-toggle"><i class="fa fa-cog"></i></a>
    <div class="customizer-body scrollable" style="padding: 20px">
      <h5 class="card-title">Настройки страницы</h5>
      <hr>
      {{#preview}} 
        <label class="control-label">Опубликовано</label> 
        {{#published_at}}
            <blockquote>Да</blockquote>
        {{/published_at}} 
        {{^published_at}}
            <blockquote>Нет</blockquote>
        {{/published_at}} 
        <hr>

        <label class="control-label">URI-aдрес</label> 
