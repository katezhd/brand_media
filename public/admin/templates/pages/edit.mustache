            {{/published_at}} 
            {{^published_at}} 
                {{uri}}
            {{/published_at}}
        </blockquote>
        <hr>

        <label class="control-label">Тег title</label> 
        <blockquote>{{#meta_title}}{{meta_title}}{{/meta_title}}{{^meta_title}}{{name}}{{/meta_title}}</blockquote>
        <small class="form-text text-muted">А также og:title, twitter:title, itemprop="headline"</small>

        <br>
        <label class="control-label">Тег description</label> 
        <blockquote>{{meta_description}}</blockquote>
        <small class="form-text text-muted">А также og:description, twitter:description, itemprop="description"</small>

        <br>
        {{#uScopes.update}}
          <button type="button" class="btn btn-block waves-effect waves-light btn-outline-primary edit-btn" data-id="{{st.id}}"><i class="fas fa-pencil-alt"></i> Редактировать</button> 
        {{/uScopes.update}}

      {{/preview}} 
      {{^preview}} 
        {{#uScopes.publish}}
            <div class="form-group">
                <label class="control-label">Опубликовано</label> 
                <select class="form-control select2" name="status" data-selected="{{#published_at}}1{{/published_at}}{{^published_at}}0{{/published_at}}">
                    <option value="1">Да</option>
                    <option value="0">Нет</option>
                </select>
                <div class="invalid-feedback"></div>
            </div>
        {{/uScopes.publish}}
        {{^uScopes.publish}}
            <input type="hidden" name="status" value="{{#published_at}}1{{/published_at}}{{^published_at}}0{{/published_at}}">
            <label class="control-label">Опубликовано</label>
            {{#published_at}}
